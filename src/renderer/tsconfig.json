{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "typings/*": ["../../typings/*"],
      "@/*": ["./*"],
      "@pan/bridge": ["../bridge"],
      "@pan/utils": ["../utils"],
      "@@/*": [".umi/*"]
    }
  },
  "include": [
    "mock/**/*",
    "./services/**/*",
    "./pages/**/*",
    "./assets/**/*",
    "../../typings/**/*"
  ]
}
